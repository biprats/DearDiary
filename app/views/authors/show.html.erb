
<h1><%= @author.name %>
	<% if @author.bio.present? %>
	<br>
		<h3>
			Bio:
		</h3>
		<p>
			<%= @author.bio %>
		</p>
		<br>
	<% end %>
<h3>
	Thoughts:
</h3>
<ul>
		<% @author.thoughts.each do |t| %>
		  <li class="text">			
			<%= link_to t.text, thought_path(t) %>
		  </li>	
		<% end %>
		<% if @author.thoughts.count.zero? %>
			This Author is Not Thinking
		<% end %>
</ul>
