<% if flash[:notice] %>
	<h3 class="top"><%= flash[:notice] %></h3>
<% end %>
<div class="spread">
	<span>
	<h3>Sign Up</h3>
		<div class="left-quarter">
			<br><br><%= form_for(Author.new) do |f| %>
				<%= f.label :email %>
				<%= f.email_field :email %>
				<%= f.label :name %>
				<%= f.text_field :name %><br /><br>
				<%= f.label :password %>
				<%= f.password_field :password %><br>
				<%= f.label :password, "Confirm Password" %>
				<%= f.password_field :password_confirmation %><br><br>
				<%= f.label :bio %><br />
				<%= f.text_area :bio %><br /><br>
				<%= f.submit "Get Published" %>
			<% end %>
		</div>
	</span>
	<span>
	<h3>Sign In</h3>
		<div class="left-quarter">
			<br><br><%= form_for(Author.new, url: sessions_path) do |f| %>
				<%= f.label :email, "Enter Name or Email"  %>
				<%= f.text_field :email %><br /><br>
				<%= f.label :password %>
				<%= f.password_field :password %><br /><br>
				<%= f.submit "Sign In" %>
			<% end %>
		</div>
	</span>
</div>